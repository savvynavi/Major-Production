{
	"$schema": "http://json-schema.org/schema#",
	"$id": "https://github.com/savvynavi/Major-Production/tree/master/Major%20Production/Assets/_Scripts/Save%20System/SaveFileSchema",
	"definitions":{
		"Character" : {
			"type": "object",
			"properties": {
				"name": { "type": "string" },
				"hp": { "type": "number" },
				"mp": { "type": "number" },
				"weapon": { "type": "string" },
				"ringL": { "type": "string"},
				"ringR": { "type": "string"},
				"activePowers": {
					"type": "array",
					"items":  {"type": "string" }
				},
			"experience":  {"$ref":  "#/definitions/Experience" }
			},
			"required": ["name","hp","mp","weapon","ringL","ringR","activePowers","experience"]
		},
		"InventoryManager" : {
			"type": "object",
			"properties": {
				"playerInventory": {
					"type": "array",
					"items": {"type": "string"}
				}
			},
			"required": ["playerInventory"]
		},
		"SceneLoader": {
			"type": "object",
			"properties": {
				"scene": {"type":"string"},
				"entrypointIndex": {"type":"number"},
				"sceneData": {
					"type": "object",
					"additionalProperties": {
						"type": "object",
						"additionalProperties": {
							"$ref": "#/definitions/PersitentObject"
						}
					}
				}
			},
			"required": ["scene","entrypointIndex","sceneData"]
		},
		"Experience": {
			"type": "object",
			"properties": {
				"characterLevel": { "type": "integer" },
				"exp": { "type": "integer" }
			},
			"required": ["characterLevel","exp"]
		},
		"PersitentObject" : {
			"anyOf": [
				{"$ref": "#/definitions/PersistentTrigger"}
			]
		},
		"PersistentTrigger" : {
			"type": "object",
			"properties": {
				"Triggered": {"type":"boolean"}
			},
			"required": ["Triggered"]
		}
	},
	"type": "object",
	"properties": {
		"playerTeam": {
			"type": "array",
			"items": {"$ref": "#/definitions/Character"}
		},
		"inventory": {"$ref": "#/definitions/InventoryManager"},
		"scene": {"$ref": "#/definitions/SceneLoader"}
	},
	"required": ["playerTeam","inventory","scene"]
}